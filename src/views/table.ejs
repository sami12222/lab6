<% layout('layout') -%>
<% if (typeof subtitle !== 'undefined') { %>
  <h5 class="text-muted mb-3"><%= subtitle %></h5>
<% } %>

<div class="table-responsive">
  <table class="table table-striped table-bordered align-middle">
    <thead>
      <tr>
        <% if (rows && rows.length) {
             Object.keys(rows[0]).forEach(k => { %>
          <th><%= k %></th>
        <% }); } %>
      </tr>
    </thead>
    <tbody>
      <% if (rows && rows.length) { rows.forEach(r => { %>
        <tr>
          <% Object.values(r).forEach(v => { %>
            <td><%= (v === null || v === undefined) ? '' : v %></td>
          <% }); %>
        </tr>
      <% }); } else { %>
        <tr><td colspan="99" class="text-center text-muted">Aucune donn√©e</td></tr>
      <% } %>
    </tbody>
  </table>
</div>
